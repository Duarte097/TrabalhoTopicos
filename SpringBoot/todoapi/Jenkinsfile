pipeline {
    agent any

    stages {
        stage('Build da imagem Docker') {
            steps {
                sh 'docker build -t todoapi .'
            }
        }
        stage('Remove container e imagem antigos') {
            steps {
                sh 'docker rm -f todoapi'
                sh 'docker rmi todoapi'
            }
        }
        stage('Crie um novo container') {
            steps {
                sh 'docker run -d --name todoapi todoapi'
            }
        }
        stage('Inicie o container') {
            steps {
                sh 'docker start todoapi'
            }
        }
    }
    post {
        always {
            mail to: 'leonardo_wow@outlook.com', subject: 'Job conclu√≠do', body: 'O job foi executado com sucesso.'
        }
    }
}